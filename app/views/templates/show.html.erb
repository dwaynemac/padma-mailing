<h1>Template</h1>

<p>
  <b>Name</b><br>
  <%= @template.name %>
</p>

<p>
  <b>Description</b><br>
  <%= @template.description %>
</p>

<p>
  <b>Subject</b><br>
  <%= @template.subject%>
</p>

<p>
  <b>Content</b><br>
  <%= @template.content.html_safe %>
</p>

<div class="form-actions">
  <%= link_to 'Back', templates_path, :class => 'btn'  %>
  <%= link_to 'Edit', "/editor" + edit_template_path(@template),
              id:"edit_link",
              data: {save_url: mercury_update_template_path(@template)},
              class: 'btn' %>
  <%= link_to 'Delete', template_path(@template), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
