<%= form_for @template do |f| %>
  <div class="form-group">
    Name: <%= f.text_field :name %>
  </div>
  <div class="form-group">
  Description: <%= f.text_field :description %>
  </div>
  <div class="form-group">
  Subject: <%= f.text_field :subject %>
  </div>
  Content: <%= f.text_area :content, id: "wysiwyg"%>
  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
