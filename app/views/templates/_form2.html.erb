<%= form_for @template do |f| %>
  <div class="form-group">
    Name: <%= f.text_field :name %>
  </div>
  <div class="form-group">
  Description: <%= f.text_field :description %>
  </div>
  <div class="form-group">
  Subject: <%= f.text_field :subject %>
  </div>
  Content:
  <div id="quill-editor-container">
    <%= @template.content.html_safe if @template %>
  </div>
  <%= f.hidden_field :content, id: "wysiwyg"%>
  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <% if @template.id.nil? %>
      <%= link_to "Cancel", templates_path, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to "Cancel", template_path(@template.id), class: 'btn btn-danger' %>
    <% end %>
  </div>
<% end %>
