<% if can_send_manually_to_contact?(template) -%>
  <%= form_tag("templates/#{template.id}/deliver", :method => :post, class: "send_email_form") do %>
      <%= hidden_field_tag "recipient", @contact.email %>
      <%= hidden_field_tag "contact_id", @contact.id %>
      <%= submit_tag t('templates.index.deliver_to',
                     recipient: @contact.email),
                     class: "btn btn-default btn-sm",
                     confirm: t('confirm') %>
  <% end %>
<% else -%>
  <%= t('.cant_send') %>
<% end -%>
