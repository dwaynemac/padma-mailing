<% if @contact && !@contact.email.blank?%>
    <%= form_tag("templates/#{template.id}/deliver", :method => :post, class: "send_email_form") do %>
        <%= hidden_field_tag :recipient, value: @contact.email %>
        <%= submit_tag t('templates.index.deliver_to', recipient: @contact.email), class: "btn btn-mini", confirm: t('confirm') %>
    <% end %>
<% else %>
    <%= form_tag("templates/#{template.id}/deliver", :method => :post, class: "send_email_form") do %>
        <%= text_field_tag :recipient, nil, class: "input-small search-query" %>
        <%= submit_tag t('templates.index.deliver'), class: "btn btn-mini", confirm: t('confirm') %>
    <% end %>
<% end %>