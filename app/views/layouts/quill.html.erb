<!DOCTYPE html>
<html>
  <head>
  <%= favicon_link_tag "/favicon.ico" %>
    <meta name="viewport" content="width=device-width, maximum-scale=1.0, initial-scale=1.0">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
<script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <title><%= params[:page_title] %> - PADMA</title>
  </head>
  <body>
<script type="text/javascript">
  I18n.defaultLocale = "<%= I18n.default_locale %>";
  I18n.locale = "<%= I18n.locale %>";
</script>
<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
      <div class="content">
        <div class="row">
          <div class="span12" id="flash_messages">
            <%= render 'shared/flash_messages' %>
          </div>
        </div>
        <div class="row">
          <div class="span12">
            <%= yield %>
          </div>

        </div><!--/row-->
      </div><!--/content-->

      <footer>
      </footer>

  </div>
</div>
<%if false%>
<script>
      
      FroalaEditor.DefineIcon('padma_contact', {NAME: 'user'});
  FroalaEditor.RegisterCommand('padma_contact', {
    title: 'Contact data',
    type: 'dropdown',
    focus: false,
    undo: false,
    refreshAfterCallback: true,
    options: {
      '{{contact.full_name}}': 'Full name',
      '{{contact.first_name}}': 'First name',
      '{{contact.last_name}}': 'Last name',
      '{{contact.gender}}': 'Gender',
      '{{contact.a_u_o}}': 'Ending feminine or masculine',
      '{{contact.instructor.name}}': 'Contacts instructor name',
      '{{contact.instructor.email}}': 'Contacts instructor email'
    },
    callback: function (cmd, val) {
      this.html.insert(val);
    }
  });

  FroalaEditor.DefineIcon('follow_up', {NAME: 'calendar-check'});
  FroalaEditor.RegisterCommand('follow_up', {
    title: 'Follow up',
    type: 'dropdown',
    focus: false,
    undo: false,
    refreshAfterCallback: true,
    options: {
      '{{next_action.date}}': 'Date',
      '{{next_action.time}}': 'Time',
      '{{next_action.instructor.name}}': 'Instructor Name',
      '{{next_action.instructor.email}}': 'Instructor Email'
    },
    callback: function (cmd, val) {
      this.html.insert(val);
    }
  });

  FroalaEditor.DefineIcon('instructor', {NAME: 'users'});
  FroalaEditor.RegisterCommand('instructor', {
    title: 'Instructor',
    type: 'dropdown',
    focus: false,
    undo: false,
    refreshAfterCallback: true,
    options: {
      '{{instructor.name}}': 'Name',
      '{{instructor.email}}': 'Email'
    },
    callback: function (cmd, val) {
      this.html.insert(val);
    }
  });

  FroalaEditor.DefineIcon('trial_lesson', {NAME: 'clock'});
  FroalaEditor.RegisterCommand('trial_lesson', {
    title: 'Trial lesson',
    type: 'dropdown',
    focus: false,
    undo: false,
    refreshAfterCallback: true,
    options: {
      '{{trial_lesson.date}}': 'Date',
      '{{trial_lesson.instructor.name}}': 'Instructor Name',
      '{{trial_lesson.instructor.email}}': 'Instructor Email',
      '{{trial_lesson.time_slot.time}}': 'Time Slot Time',
      '{{trial_lesson.time_slot.name}}': 'Time Slot Name'
    },
    callback: function (cmd, val) {
      this.html.insert(val);
    }
  });
    </script>
      <script>
 new FroalaEditor('#wysiwyg', {
   imageUpload: false,
   videoUpload: false,
   fileUpload: false,
   quickInsertEnabled: false,
   useClasses: false,
   attribution: false,
   heightMin: 500,
   iconsTemplate: 'font_awesome_5',
   toolbarButtons: {
      'moreText': {
        'buttons': ['bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript', 'fontFamily', 'fontSize', 'textColor', 'backgroundColor', 'inlineClass', 'inlineStyle', 'clearFormatting']
      },
      'moreParagraph': {
        'buttons': ['alignLeft', 'alignCenter', 'formatOLSimple', 'alignRight', 'alignJustify', 'formatOL', 'formatUL', 'paragraphFormat', 'paragraphStyle', 'lineHeight', 'outdent', 'indent', 'quote']
      },
     'moreLiquid': {
       'buttons' : ['padma_contact', 'follow_up', 'instructor', 'trial_lesson'],
       'align': 'left',
       'buttonsVisible': '4'
     },
      'moreRich': {
        'buttons': ['insertLink', 'insertImage', 'insertVideo', 'insertTable', 'emoticons', 'fontAwesome', 'specialCharacters', 'embedly', 'insertHR']
      },
      'moreMisc': {
        'buttons': ['undo', 'redo', 'fullscreen', 'print', 'getPDF', 'spellChecker', 'selectAll', 'html', 'help'],
         'align': 'right',
      }
    }
  })
      </script>
    <% end %>
  </body>
</html>

