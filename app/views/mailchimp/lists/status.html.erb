<h2>Synchronization status</h2>
<table class="table table-striped">
  <tr>
    <td>Status in contacts-ws</td>
    <td><%= @synchro["status"] %></td>
  </tr>
  <tr>
    <td>Last syncronized</td>
    <td><%= @synchro["last_synchronization"] %></td>
  </tr>
  <tr>
    <td>Merge fields</td>
    <td>local: <%= JSON.parse(@synchro["merge_fields"]).count %> <br> remote: <%= @list_in_mailchimp["stats"]["merge_field_count"] %></td>
  </tr>
  <tr>
    <td>Coefficient group</td>
    <td>local: <%= JSON.parse(@synchro["coefficient_group"])["interests"].keys.count %><br>remote: </td>
  </tr>
  <tr>
    <td>Currently running batches</td>
    <td><%= @api.batches.retrieve.body["batches"].select{|b| b["status"] != "finished"}.count %></td>
  </tr>
</table>

<h2>Statistics</h2>
<table class="table table-striped">
  <tr>
    <td>Average unsubscribed</td>
    <td><%= @list_in_mailchimp["stats"]["avg_unsub_rate"] %></td>
  </tr>
  <tr>
    <td>Open rate</td>
    <td><%= @list_in_mailchimp["stats"]["open_rate"] %></td>
  </tr>
  <tr>
    <td>Click rate</td>
    <td><%= @list_in_mailchimp["stats"]["click_rate"] %></td>
  </tr>
</table>

<h3>Since last send</h3>
<table class="table table-striped">
  <tr>
    <td>Send at</td>
    <td><%= @list_in_mailchimp["stats"]["campaign_last_sent"] %></td>
  </tr>
  <tr>
    <td>Unsubscribed</td>
    <td><%= @list_in_mailchimp["stats"]["unsubscribe_count_since_send"] %></td>
  </tr>
  <tr>
    <td>Cleaned</td>
    <td><%= @list_in_mailchimp["stats"]["cleaned_count_since_send"] %></td>
  </tr>
</table>

