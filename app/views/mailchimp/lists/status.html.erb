<h1><%= @list.name %></h1>

<h2>
  Contacts
  <% local_scope = @list.get_scope %>
  <% if local_scope.to_i == (@list_in_mailchimp["stats"]["member_count"].to_i + 
      @list_in_mailchimp["stats"]["unsubscribe_count"].to_i +
      @list_in_mailchimp["stats"]["cleaned_count"].to_i)
  %>
    <span class="badge badge-success">OK</span>
  <% else %>
    <span class="badge bage-warning">Error</span>
  <% end %>
</h2>
<table class="table table-striped">
  <tr>
    <td>Contact to synchronize</td>
    <td><%= @list.get_scope %></td>
  </tr>
  <tr>
    <td>Contacts in list as members</td>
    <td><%= @list_in_mailchimp["stats"]["member_count"] %></td>
  </tr>
  <tr>
    <td>Unsubscribed contacts</td>
    <td><%= @list_in_mailchimp["stats"]["unsubscribe_count"] %></td>
    <td>Ver contactos</td>
  </tr>
  <tr>
    <td>Cleaned contacts</td>
    <td><%= @list_in_mailchimp["stats"]["cleaned_count"] %></td>
    <td>Ver contactos</td>
  </tr>
</table>
<%= link_to "Ajustar scope", segments_mailchimp_list_path(id: @list.id), class: "btn btn-primary" %>
