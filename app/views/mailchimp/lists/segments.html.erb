<%= form_for set_up(@list), url: mailchimp_list_path(@list), method: :put do |f|  %>  
  <legend>
    <%= t('mailchimp.list.segments.segments') %>
  </legend>
  <fieldset>
  <%= f.fields_for :mailchimp_segments do |ff| %>
    <%= ff.text_field :name, {placeholder: t('mailchimp.list.segments.name'), size: "20"} %> 

    <label for="status">
      <%= t('mailchimp.list.segments.status')%>:
    </label>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary <%= bootstrap_check_box_active(ff, 'prospect') %>" >
        <%= ff.check_box "prospect" %>
        <%= t('mailchimp.list.segments.prospect')%>
      </label>

      <label class="btn btn-primary <%= bootstrap_check_box_active(ff, 'student') %>" >
        <%= ff.check_box "student" %>
        <%= t('mailchimp.list.segments.student')%>
      </label>

      <label class="btn btn-primary <%= bootstrap_check_box_active(ff, 'exstudent') %>" >
        <%= ff.check_box "exstudent" %>
        <%= t('mailchimp.list.segments.exstudent')%>
      </label>
    </div>
    
    <label for="only_man">
      <%= t('mailchimp.list.segments.gender')%>:
    </label>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary <%= bootstrap_check_box_active(ff, 'only_man') %>" >
        <%= ff.check_box "only_man"  %>
        <%= t('mailchimp.list.segments.only_man')%>
      </label>
    </div>
    
    <label for="coefficient">
      <%= t('mailchimp.list.segments.coefficient')%>:
    </label>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary <%= bootstrap_radio_button_active(ff, 'coefficient', 'all') %>" >
        <%= ff.radio_button :coefficient, "all"%>
        <%= t('mailchimp.list.segments.all')%>
      </label>

      <label class="btn btn-primary <%= bootstrap_radio_button_active(ff, 'coefficient', 'fp') %>" >
        <%= ff.radio_button :coefficient, "fp"%>
        <%= t('mailchimp.list.segments.fp')%>
      </label>

      <label class="btn btn-primary <%= bootstrap_radio_button_active(ff, 'coefficient', 'perfil') %>" >
        <%= ff.radio_button :coefficient, "perfil" %>
        <%= t('mailchimp.list.segments.perfil')%>
      </label>

      <label class="btn btn-primary <%= bootstrap_radio_button_active(ff, 'coefficient', 'pmas') %>" >
        <%= ff.radio_button :coefficient, "pmas"%>
        <%= t('mailchimp.list.segments.pmas')%>
      </label>
    </div>
    
    <% if ff.object.persisted? %>
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-danger">
          <%= ff.check_box :_destroy %>
          <%= t('mailchimp.list.segments.destroy')%>
        </label>
      </div>
    <% end %>
 
    </br></br>
  <% end %>
    
  <label for="filter_method">
    <%= t('mailchimp.list.segments.filter_method')%>:
  </label>
  <div class="btn-group" data-toggle="buttons">
    <label class="btn btn-primary">
      <input type="radio" name="filter_method", value="all">
      <%= t('mailchimp.list.segments.all')%>
    </label>

    <label class="btn btn-primary">
      <input type="radio" name="filter_method", value="segments">
      <%= t('mailchimp.list.segments.segments')%>
    </label>
  </div>
      
  </fieldset>
  <%= f.submit nil, class: 'btn btn-success' %>
  
<% end -%>
