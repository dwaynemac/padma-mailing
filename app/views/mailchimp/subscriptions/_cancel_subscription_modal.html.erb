<% if can?(:destroy,PetalSubscription) -%>
  <div class="modal fade in" id="confirm-cancel-subscription" tabindex="-1" role="dialog" aria-labelledby="confirmCancelSubscription" style="display: none; padding-right: 15px;">
    <div class="modal-dialog" role="document">
      <%= form_for :subscription, url: mailchimp_subscription_path, method: 'DELETE' do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
          <h4 class="modal-title" id="confirm-subscription-title"><%= t('.title') %></h4>
        </div>
        <div class="modal-body">
          <%= t('.synchronization_will_stop') %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('.keep_subscription') %></button>
            <button type="submit" class="btn btn-danger" data-disable-with="..."><%= t('mailchimp.subscriptions.show.cancel_integration') %></button>
        </div>
      </div>
      <% end -%>
    </div>
  </div>
<% end -%>
