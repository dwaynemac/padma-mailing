<%- page_title t(".title") -%>
<%- breadcrum t(".title") -%>

<div class='mailchimp-section'>
	<section class='card card-primary'>
		<header class='card-title'><%= t('.title') %></header>
		<div class='card-body'>
			<p class='lead'>
        <%= t('.intro') %>
			</p>
			<p><strong><%= t('.monthly_cost') %>: <%= @monthly_value %> <%= t('.monthly') %></strong></p>
			<div class='mailchimp-integration'>
				<div class='integration-item'>
          <%= image_tag 'logo-padma.jpg' %>
				</div>
				<div class='integration-item'>
					<div class='glyphicon glyphicon-resize-horizontal'></div>
				</div>
				<div class='integration-item'>
          <%= image_tag 'logo-mailchimp.jpg' %>
				</div>
			</div>
			<footer class='form-actions margin-top-20 text-right'>
        <a href="" class='btn btn-danger' data-toggle="modal" data-target="#confirm-cancel-subscription"><%= t('.cancel_integration') %></a>
			</footer>
		</div>
	</section>
</div>

<div class="modal fade in" id="confirm-cancel-subscription" tabindex="-1" role="dialog" aria-labelledby="confirmCancelSubscription" style="display: none; padding-right: 15px;">
  <div class="modal-dialog" role="document">
    <%= form_for :subscription, url: mailchimp_subscription_path, method: 'DELETE' do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title" id="confirm-subscription-title"><%= t('.cancel_subscription.title') %></h4>
      </div>
      <div class="modal-body">
        <%= t('.cancel_subscription.synchronization_will_stop') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('.cancel_subscription.keep_subscription') %></button>
        <button type="submit" class="btn btn-danger" data-disable-with="..."><%= t('.cancel_integration') %></button>
      </div>
    </div>
    <% end -%>
  </div>
</div>
