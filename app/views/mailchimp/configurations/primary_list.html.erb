<%- page_title t("mailchimp.primary_list.title") -%>
<%- breadcrum t("mailchimp.primary_list.title") -%>

<div class='mailchimp-section'>
  <%= form_for @configuration, url: mailchimp_configuration_path , method: :put do |f|  %>
    <section class='card card-primary'>
      <header class='card-title'><%= t('mailchimp.primary_list.setup_primary_list') %></header>
      <div class='card-body'>
        <% if !@lists.empty? %>
          <p class='lead'>Sus listas en Mailchimp:</p>
          <div class='row'>
            <div class='col-md-4'>
              <%= f.select :primary_list_id, @lists.map {|list| [list.name, list.id]} %>
            </div>
          </div>
          <p class='lead margin-top-20'><%= t('mailchimp.primary_list.whant_a_new_one') %></p>
          <div class='row'>
            <div class='col-md-5'>
              <div class='well well-white'>
                <ul class='steps-newlist'>
                  <li>
                    <strong>Paso 1:</strong> Cree una nueva lista
                    <div class='margin-top-10'><%= link_to t('mailchimp.primary_list.create_one'), "https://admin.mailchimp.com/lists/new-list/", target: '_blank', :class => 'btn btn-default' %></div>
                  </li>
                  <li>
                    <strong>Paso 2:</strong> Recargue la pagina
                    <div class='margin-top-10'><%= link_to t('mailchimp.primary_list.reload_when_finished'), 'javascript: location.reload()', :class => 'btn btn-default' %></div>
                  </li>
                  <li>
                    <strong>Paso 3:</strong> Ya puede elegir su nueva lista.
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <a href="">M&aacute;s ayuda sobre listas</a>
        <% else %>
          <label for="list_id">
            <p><%= t('mailchimp.primary_list.no_list') %></p>
            <%= link_to t('mailchimp.primary_list.create_one'), "https://admin.mailchimp.com/lists/new-list/", target: '_blank', :class => 'btn btn-default btn-sm' %>
          </label>
          <p class="help-block">
            <%= link_to t('mailchimp.primary_list.dont_know'),
                        "http://kb.mailchimp.com/article/how-do-i-create-a-new-list/",
                        target: '_blank' %>
          </p>
        <% end %>
        <footer class='form-actions margin-top-20 text-right'>
          <a href="#" class='btn btn-default'>Cancelar</a>
          <%= f.submit t('mailchimp.primary_list.sync_with_chosen_list'), class: 'btn btn-primary' %>
        </footer>
      </div>
    </section>
  <% end -%>
</div>
