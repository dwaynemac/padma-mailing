<%- breadcrum t("triggers.new.title") -%>
<%= nested_form_for @trigger, :html => { :class => 'form-horizontal trigger-form' } do |f| %>
  <fieldset>
    <h2><%= t('triggers.new.event_select_message') %></h2>
    <div>
      <div class="form-group">
        <div class='col-md-12'>
          <%= f.select :event_name, Trigger::VALID_EVENT_NAMES.map{|en| [t(".event.#{en}"),en]}, {:include_blank=>true}, class: 'selectpicker event_names col-xs-4 col-md-3', "data-live-search"=>"true", "data-placeholder-text" => t('.select_event') %>
          <span id="alert-message" class="alert alert-danger alert-message-inline alert-md"><%= t('triggers.birthday.warning') %></span>
        </div>
      </div>
      <div id="filters" class='form-group form-group-filters'></div>
      <div class="add_more form-group">
        <div class='col-md-12'>
          <%= f.link_to_add t('.add_filter'), :filters, class: "btn btn-mini btn-primary btn-glyphicon btn-glyphicon-plus", id: "add_more_filter", :data => { :target => "#filters" } %>
        </div>
      </div>
      <div id="filter_option" class='form-group'>
        <div class='col-md-12'>
          <%= render partial: 'filter', :locals =>{ f: f} %>
        </div>
      </div>
      <div class='control-group'>
        <%= link_to t('.continue_to_select_template'), "javascript:void(0);", :class => 'btn btn-large btn-primary btn-disabled', id: 'continue-part2' %>
      </div>
      <div class='part2'>
        <div class="form-group">
          <div class='col-md-12'>
            <h2><%= t('triggers.new.template_select_message') %></h2>
            <div class="form-inline form-group">
              <div class='col-md-12'>
                <select id="select-template" class='selectpicker select-template col-xs-4 col-md-3' data-live-search="true", data-placeholder-text="<%= t('.select_template') %>">
                  <option data-hidden="true"></option>
                  <%- current_user.current_account.templates.each do |template| %>
                    <option value="<%= template.id %>"><%= template.name %></option>
                  <%- end %>
                </select>
              </div>
            </div>
            <div id="templates"></div>
            <div id="templates_option">
              <%= render partial: 'templates/templates', :locals =>{ f: f} %>
            </div>
          </div>
        </div>
        <div class="form-actions create_trigger">
          <%= f.submit nil, :class => 'btn btn-primary submit_trigger' %>
          <%= link_to t('cancel'), templates_path, :class => 'btn btn-link' %>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>

<div id="new_filter" style="display: none" data-options="<%= {suggested_values: Filter::SUGGESTED_VALUES}.to_json %>">
</div>

<div id="new_trigger_template" style="display:none" data-options="<%= {offset_references: TemplatesTriggers::VALID_REFERENCES}.to_json %>">
</div>
