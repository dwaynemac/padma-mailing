<h1><%= t('scheduled_mails.index.title') %></h1>

<table class="table table-striped">
  <thead>
  <tr>
    <td><%= t('scheduled_mail.attributes.template') %></td>
    <td><%= t('scheduled_mail.attributes.recipient_email') %></td>
    <td><%= t('scheduled_mail.attributes.send_at') %></td>
    <td><%= t('scheduled_mail.attributes.delivered_at') %></td>
  </tr>
  </thead>
  <tbody>
  <% @scheduled_mails.each do |sm| %>
    <tr>
      <td><%= sm.template.name %></td>
      <td><%= link_to_if sm.contact_id, sm.recipient_email, "http://#{Contacts::HOST}/contacts/#{sm.contact_id}" %></td>
      <td><%= l( sm.send_at) if sm.send_at %></td>
      <td>
        <% if sm.delivered_at %>
          <%= l( sm.delivered_at) if sm.delivered_at%>
        <% else %>
          <%= t('scheduled_mails.index.pending') %>
        <% end %>
      </td>
      <td>
        <% unless sm.delivered? %>
          <%= link_to t('helpers.links.cancel'), scheduled_mail_path(sm), method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' %>
          <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New', new_trigger_path, :class => 'btn btn-primary' %>