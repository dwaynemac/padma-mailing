<%= form_for 'options', {url: '', html: {class: 'form-horizontal', style: 'width:615px'}} do |f| %>

  <div class="form-inputs mercury-display-pane-container">

    <fieldset>
      <div class="control-group string optional">
        <label class="string optional control-label" for="options_first_name">Select Trial Lesson Tag</label>
        <div class="controls">
          <% trial_lesson_options = [ ["Date", "%{trial_lesson.date}"], 
                                      ["Instructor Name", "%{instructor.trial_lesson.name}"],
                                      ["Instructor Email", "%{instructor.trial_lesson.email}"],
                                      ["Time Slot Time", "%{instructor.time_slot.time}"],
                                      ["Time Slot Name", "%{instructor.trial_lesson.name}"]] 
           %>
           <%= select_tag "trial_lesson", options_for_select(trial_lesson_options, params[:trial_lesson]), :class=>'span6'%>
        </div>
      </div>
    </fieldset>
  </div>

  <div class="form-actions mercury-display-controls">
    <input class="btn btn-primary" name="commit" type="submit" value="Add Tag"/>
  </div>

<% end %>